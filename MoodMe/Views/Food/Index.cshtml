@model MoodMe.ViewModel.SelectFoodViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1 style="color:white">Interesting...</h1>

    <br />
    <br />

    <h2 style="color:lightslategrey">What did you eat?</h2>

    <br />


    <form asp-controller="Food" asp-action="Submit" method="post">
        <div class="form-group">
            <select asp-for="FoodId" asp-items="Model.Foods"></select>
        </div>


        <br />
        <br />
        <br />

        <input class="btn btn-secondary" role="button" type="submit" value="Submit" />
    </form>
</div>