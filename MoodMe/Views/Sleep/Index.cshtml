@model MoodMe.ViewModel.AddSleepViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1 style="color:white">Welcome!</h1>

    <br />

    <h2 style="color:lightslategrey">How many hours of sleep did you get?</h2>

    <br />


    <form asp-controller="Sleep" asp-action="Submit" method="post">
        <div class="form-group">
     
            <select asp-for="SleepId" asp-items="Model.Sleeps"></select>
        </div>


        <br />
        <br />
        <br />

        <input class="btn btn-secondary" role="button" type="submit" value="Submit" />
    </form>
</div>